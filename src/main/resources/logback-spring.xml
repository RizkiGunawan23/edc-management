<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define log directory -->
    <property name="LOG_DIR" value="./logs"/>
    <property name="LOG_FILE" value="${LOG_DIR}/edc-management"/>
    
    <!-- Console Appender for development (minimal) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{15} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Business Logic File Appender (Clean and focused) -->
    <appender name="BUSINESS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}.log</file>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd-HH}.log.gz</fileNamePattern>
            <maxHistory>72</maxHistory> <!-- Keep 72 hours (3 days) -->
            <totalSizeCap>2GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5level | %logger{25} | [%X{correlationId:-}] [%X{terminalId:-}] | %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Performance Logger -->
    <appender name="PERFORMANCE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/performance.log</file>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/performance.%d{yyyy-MM-dd-HH}.log.gz</fileNamePattern>
            <maxHistory>48</maxHistory> <!-- Keep 48 hours (2 days) -->
            <totalSizeCap>1GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Audit Logger -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/audit.log</file>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/audit.%d{yyyy-MM-dd-HH}.log.gz</fileNamePattern>
            <maxHistory>168</maxHistory> <!-- Keep 168 hours (7 days) for audit compliance -->
            <totalSizeCap>5GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | [%X{correlationId:-}] [%X{terminalId:-}] | %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Application-specific loggers with clean output -->
    <logger name="com.rizki.edcmanagement.controller" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="BUSINESS_FILE"/>
    </logger>
    
    <logger name="com.rizki.edcmanagement.service" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="BUSINESS_FILE"/>
    </logger>
    
    <logger name="com.rizki.edcmanagement.util.LoggingUtil" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="BUSINESS_FILE"/>
    </logger>
    
    <logger name="com.rizki.edcmanagement.config" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="BUSINESS_FILE"/>
    </logger>
    
    <logger name="com.rizki.edcmanagement.specification" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="BUSINESS_FILE"/>
    </logger>
    
    <!-- Specialized loggers -->
    <logger name="PERFORMANCE" level="INFO" additivity="false">
        <appender-ref ref="PERFORMANCE_FILE"/>
    </logger>
    
    <logger name="AUDIT" level="INFO" additivity="false">
        <appender-ref ref="AUDIT_FILE"/>
    </logger>
    
    <!-- Suppress noisy framework logs - Aggressive noise reduction -->
    <logger name="org.springframework" level="ERROR" additivity="false"/>
    <logger name="org.springframework.boot" level="ERROR" additivity="false"/>
    <logger name="org.springframework.web" level="ERROR" additivity="false"/>
    <logger name="org.springframework.security" level="ERROR" additivity="false"/>
    <logger name="org.springframework.boot.devtools" level="OFF" additivity="false"/>
    
    <!-- Database and connection pool -->
    <logger name="org.hibernate" level="ERROR" additivity="false"/>
    <logger name="org.hibernate.SQL" level="OFF" additivity="false"/>
    <logger name="org.hibernate.type" level="OFF" additivity="false"/>
    <logger name="org.hibernate.orm.deprecation" level="OFF" additivity="false"/>
    <logger name="com.zaxxer.hikari" level="ERROR" additivity="false"/>
    <logger name="com.zaxxer.hikari.pool.HikariPool" level="OFF" additivity="false"/>
    <logger name="com.zaxxer.hikari.HikariDataSource" level="OFF" additivity="false"/>
    <logger name="com.zaxxer.hikari.HikariConfig" level="OFF" additivity="false"/>
    
    <!-- JPA and validation -->
    <logger name="org.springframework.orm.jpa" level="ERROR" additivity="false"/>
    <logger name="org.springframework.data.jpa" level="ERROR" additivity="false"/>
    <logger name="javax.persistence" level="OFF" additivity="false"/>
    <logger name="org.hibernate.validator" level="ERROR" additivity="false"/>
    
    <!-- Tomcat and server -->
    <logger name="org.apache.catalina" level="ERROR" additivity="false"/>
    <logger name="org.apache.tomcat" level="ERROR" additivity="false"/>
    <logger name="org.apache.coyote" level="ERROR" additivity="false"/>
    <logger name="org.eclipse.jetty" level="ERROR" additivity="false"/>
    
    <!-- Jackson and serialization -->
    <logger name="com.fasterxml.jackson" level="ERROR" additivity="false"/>
    
    <!-- HTTP clients and misc -->
    <logger name="org.apache.http" level="ERROR" additivity="false"/>
    <logger name="httpclient" level="ERROR" additivity="false"/>
    <logger name="org.reflections" level="OFF" additivity="false"/>
    
    <!-- Spring Boot Actuator -->
    <logger name="org.springframework.boot.actuate" level="ERROR" additivity="false"/>
    
    <!-- Template engines -->
    <logger name="org.thymeleaf" level="ERROR" additivity="false"/>
    
    <!-- Netty (if used) -->
    <logger name="io.netty" level="ERROR" additivity="false"/>
    
    <!-- Root logger (minimal for everything else) -->
    <root level="WARN">
        <appender-ref ref="BUSINESS_FILE"/>
    </root>
    
    <!-- Profile-specific configurations -->
    <springProfile name="prod">
        <logger name="com.rizki.edcmanagement" level="INFO" additivity="false">
            <appender-ref ref="BUSINESS_FILE"/>
        </logger>
        
        <root level="ERROR">
            <appender-ref ref="BUSINESS_FILE"/>
        </root>
    </springProfile>
    
    <springProfile name="dev">
        <logger name="com.rizki.edcmanagement" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="BUSINESS_FILE"/>
        </logger>
    </springProfile>
</configuration>